{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**", ".next/**"],
			"cache": true
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"inputs": [
				"src/**/*.tsx",
				"src/**/*.ts",
				"test/**/*.ts",
				"test/**/*.tsx"
			]
		},
		"client#build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**"],
			"env": ["NEXT_PUBLIC_*"]
		},
		"pharos-server#build": {
			"dependsOn": ["^build"],
			"outputs": ["build/**"]
		},
		"shared/types#build": {
			"dependsOn": [],
			"outputs": ["dist/**"]
		},
		"shared/backend#build": {
			"dependsOn": ["shared/types#build"],
			"outputs": ["dist/**"]
		}
	}
}
