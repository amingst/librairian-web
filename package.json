{
	"name": "news-scraper-monorepo",
	"private": true,
	"packageManager": "npm@8.5.0",
	"workspaces": [
		"shared/backend",
		"shared/types",
		"pharos-server",
		"client"
	],
	"scripts": {
		"dev": "turbo run dev",
		"dev:docker": "docker-compose -f docker-compose.dev.yml up",
		"start:docker": "docker-compose up -d",
		"build": "turbo run build",
		"clean": "turbo run clean",
		"install:all": "npm install --workspaces",
		"db:migrate": "prisma migrate dev",
		"db:reset": "prisma migrate reset",
		"db:populate": "ts-node --transpile-only ./scripts/populateDb.ts",
		"db:populate-test": "ts-node --transpile-only ./scripts/populateDb.ts --test",
		"db:seed-sources": "ts-node --transpile-only ./prisma/seedsources.ts",
		"db:setup": "node ./scripts/setupDb.js",
		"post": "npm run db:setup && npx prisma generate"
	},
	"dependencies": {
		"@prisma/client": "^6.13.0",
		"next": "15.4.4",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"prisma": "^6.13.0",
		"tsx": "^4.7.0",
		"turbo": "^2.5.5"
	}
}
